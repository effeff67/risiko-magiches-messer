<configuration>

    <appender  name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%highlight(%-5level)[%d{yyyy-MM-dd HH:mm:ss}] [%.7thread] %cyan(%logger{18}) - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="console" />
    </root>

</configuration>
